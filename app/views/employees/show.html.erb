<div class="col-lg-12">
  <div class="card rounded-0 mb-5 mt-5">
    <div class="card-body">
      <h2 class="text-center">Employee Information</h2>
        <div class="row text-center">
          
            <p class="lead">
              <strong>First Name : </strong><%= @employee.first_name%>
            </p>  
            <p class="lead">
              <strong>Last Name : </strong><%= @employee.last_name%>
            </p>  
            <p class="lead">
              <strong>Email : </strong><%= @employee.email%>
            </p>      
          
            <p class="lead">
              <strong>City : </strong><%= @employee.city%>
            </p> 
            <p class="lead">
              <strong>State : </strong><%= @employee.state%>
            </p> 
            <p class="lead">
              <strong>Country : </strong><%= @employee.country%>
            </p>          
      </div>
      <%= link_to "Back to Employees", employees_path, class:"btn btn-primary rounded-0" %>
      <%= link_to "Edit", edit_employee_path(@employee), class:"btn btn-primary rounded-0" %>
    </div>
  </div>
</div>