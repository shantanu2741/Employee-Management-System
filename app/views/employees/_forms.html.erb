<%= form_with model: @employee do |form| %>
    <div class="row">
        <div class="col-lg-4">
            <div class="form-group">
                <%= form.label :first_name, class:"mb-2" %>
                <%= form.text_field :first_name, class:"form-control form-control-lg rounded-0" %>
                    <% @employee.errors.full_messages_for(:first_name).each do |error|%>
                        <p><%= error%></p>
                    <% end %>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="form-group">
                <%= form.label :last_name, class:"mb-2" %>
                <%= form.text_field :last_name, class:"form-control form-control-lg rounded-0" %>
                    <% @employee.errors.full_messages_for(:last_name).each do |error|%>
                        <p><%= error%></p>
                    <% end %>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="form-group">
                <%= form.label :city, class:"mb-2" %>
                <%= form.text_field :city, class:"form-control form-control-lg rounded-0" %>
                    <% @employee.errors.full_messages_for(:city).each do |error|%>
                        <p><%= error%></p>
                    <% end %>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="form-group">
                <%= form.label :state, class:"mb-2" %>
                <%= form.text_field :state, class:"form-control form-control-lg rounded-0" %>
                    <% @employee.errors.full_messages_for(:state).each do |error|%>
                        <p><%= error%></p>
                    <% end %>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="form-group">
                <%= form.label :country, class:"mb-2" %>
                <%= form.text_field :country, class:"form-control form-control-lg rounded-0" %>
                    <% @employee.errors.full_messages_for(:country).each do |error|%>
                        <p><%= error%></p>
                    <% end %>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="form-group">
                <%= form.label :email, class:"mb-2" %>
                <%= form.email_field :email, class:"form-control form-control-lg rounded-0" %>
                <% @employee.errors.full_messages_for(:email).each do |error|%>
                        <p><%= error%></p>
                <% end %>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 mt-4">
            <%= form.submit class:"btn btn-lg btn-primary rounded-0" %>
            <%= link_to "Back to Employees", employees_path, class:"btn btn-outline-primary btn-lg rounded-0 " %>
        </div>
    </div>
<% end %>