<div class="col-lg-12">
    <%= flash[:notice]=" "%>
    <div class="card rounded-0 mb-5 mt-5">
        <div>
            <h2 class="text-center">Listing Employees</h2>
        </div>
    </div>

    <%= link_to "Create New Employee", new_employee_path, class: "btn btn-primary btn-lg mb-4 rounded-0" %>
    <table class= "table table-bordered" >
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Address</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% @employees.each do |employee| %>
            <tr>
                <td><%= employee.id %></td>
                <td><%= employee.name %></td>
                <td><%= employee.email %></td>
                <td><%= employee.address %></td>
                <td>
                    <%= link_to "Edit", edit_employee_path(employee), class:"btn btn-primary rounded-0" %>
                    <%= link_to "View Employee", employee_path(employee), class:"btn btn-secondary rounded-0" %>
                    <%= form_with model: employee, method: :delete, local: true do |form| %>
                        <%= form.submit "Delete", class: "btn btn-danger rounded-0", data: { confirm: "Are you sure to delete the employee" } %>
                      <% end %
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>